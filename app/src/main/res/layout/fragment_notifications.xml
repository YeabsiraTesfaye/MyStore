<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.TransactionsFragment">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:text="This Month Transaction"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="15dp"
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="40dp"/>
</LinearLayout>



    <androidx.core.widget.NestedScrollView
        app:layout_anchorGravity="bottom"
        app:layout_anchor="@id/datePicker"
        android:layout_gravity="bottom"
        android:id="@+id/nested"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <ScrollView
            android:id="@+id/scrollVIew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        app:layout_scrollFlags="scroll|enterAlways"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="120dp"

                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:text="Item"/>
                        <TextView
                            android:layout_width="120dp"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/black"


                            android:layout_height="wrap_content"

                            android:text="Description"/>
                        <TextView
                            android:layout_width="90dp"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/black"


                            android:layout_height="wrap_content"

                            android:text="Bought for"/>
                        <TextView
                            android:layout_width="90dp"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/black"


                            android:layout_height="wrap_content"

                            android:text="Sold For"/>
                        <TextView
                            android:layout_width="90dp"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/black"


                            android:layout_height="wrap_content"

                            android:text="Quantity"/>
                        <TextView
                            android:layout_width="90dp"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/black"


                            android:layout_height="wrap_content"

                            android:text="Total price"/>
                        <TextView
                            android:layout_width="150dp"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"

                            android:text="Sold By"/>
                        <TextView
                            android:text="Paid"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="90dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:text="Unpaid"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="90dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:layout_width="100dp"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/black"


                            android:layout_height="wrap_content"

                            android:text="Date"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ll"/>
                    <LinearLayout
                        android:paddingHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="120dp"

                            android:layout_height="30dp"

                            android:id="@+id/item"/>
                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="120dp"


                            android:layout_height="wrap_content"

                            android:id="@+id/des"/>
                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="90dp"


                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:id="@+id/totalBought"/>
                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="90dp"


                            android:layout_height="30dp"
                            android:id="@+id/sold"/>
                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="90dp"


                            android:layout_height="30dp"

                            android:id="@+id/qty"/>
                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="90dp"
                            android:textStyle="bold"
                            android:layout_height="30dp"

                            android:id="@+id/totalSold"/>
                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="150dp"


                            android:layout_height="30dp"

                            android:id="@+id/soldBy"/>
                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="90dp"
                            android:textStyle="bold"
                            android:layout_height="30dp"
                            android:id="@+id/totalPaid"/>
                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="90dp"
                            android:textStyle="bold"
                            android:layout_height="30dp"

                            android:id="@+id/totalUnpaid"/>
                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="150dp"


                            android:layout_height="30dp"

                            android:id="@+id/date"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </ScrollView>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:text="FILTER"
        android:textColor="@android:color/white"
        app:icon="@drawable/baseline_filter_list_24"
        app:iconTint="@android:color/white"

        android:layout_marginBottom="90dp"
        android:layout_marginRight="15dp"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>